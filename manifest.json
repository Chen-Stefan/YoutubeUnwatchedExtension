{
    "manifest_version": 3,
    "name": "YouTube Unwatched Videos",
    "version": "1.0",
    "description": "Filter YouTube channel videos(Videos, Shorts, Live) to show only unwatched videos",
    "permissions": [
        "activeTab"
    ],
    "host_permissions": [
        "*://*.youtube.com/*"
    ],
    "icons": {
        "16": "images/icon16.png",
        "48": "images/icon48.png",
        "128": "images/icon128.png"
    },
    "content_scripts": [
        {
            "matches": [
                "*://*.youtube.com/*"
            ],
            "js": [
                "content.js"
            ],
            "css": [
                "styles.css"
            ],
            "run_at": "document_end"
        }
    ]
}